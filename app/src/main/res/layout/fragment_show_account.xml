<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".account.ShowAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_imv_noAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/no_account" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noAccountYet"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_showAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_baseline_account_balance_24" />

            <TextView
                style="@style/textFiledStyle.editText.txvProfileStyle"
                android:text="@string/accountType" />

            <TextView
                android:id="@+id/txv_accountType"
                style="@style/textFiledStyle.editText.show"
                android:text="@string/accountType" />

            <TextView
                style="@style/textFiledStyle.editText.txvProfileStyle"
                android:text="@string/accountNumber" />

            <TextView
                android:id="@+id/txv_accountNumber"
                style="@style/textFiledStyle.editText.show"
                android:text="@string/accountNumber" />

            <TextView
                style="@style/textFiledStyle.editText.txvProfileStyle"
                android:text="@string/accountStock" />

            <TextView
                android:id="@+id/txv_accountStock"
                style="@style/textFiledStyle.editText.show"
                android:text="@string/accountStock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backAccount_btn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    app:icon="@drawable/arrow_back" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nextAccount_btn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:icon="@drawable/arrow_forward" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</ScrollView>