<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textFiledStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textFiledStyle.editText">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="textFiledStyle.editText.txvProfileStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="textFiledStyle.editText.show">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/transform_color</item>
    </style>
</resources>